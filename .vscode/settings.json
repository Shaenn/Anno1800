{
	"files.associations": {
		"**/data/config/{engine,export,game,gui}/**/*.xml": "anno-xml",
		"**/data/base/config/{engine,export,game,gui}/**/*.xml": "anno-xml"
	},
	"xml.fileAssociations": [
		{
			"pattern": "**/data/config/{engine,export,game,gui}/**/*.xml",
			"systemId": "https://raw.githubusercontent.com/anno-mods/vscode-anno-modding-tools/main/generated/assets.xsd"
		}
	],
	"json.schemas": [
		{
			"fileMatch": [
				"/modinfo.json"
			],
			"url": "https://raw.githubusercontent.com/anno-mods/vscode-anno-modding-tools/main/languages/modinfo-schema.json"
		}
	],
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"AddOn */**": true,
		"Boost */**": true,
		"Gameplay */**": true
	},
	"explorerExclude.backup": {},
	"editor.tabSize": 2,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.formatOnSave": true,
	"[xml]": {
		"editor.defaultFormatter": "redhat.vscode-xml",
		"editor.tabSize": 2
	},
	"files.trimFinalNewlines": true,
}